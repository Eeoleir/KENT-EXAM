{

  "compilerOptions": {
    // File Layout
    "rootDir": "src",
    "outDir": "dist",

    "module": "commonjs",
    "target": "es2020",
    "types": ["node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

 
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,


    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": false,
    "isolatedModules": false,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    "esModuleInterop": true
  }
}
